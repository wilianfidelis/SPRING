package com.example.veltiapi.resource;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.veltiapi.model.Categoria;
import com.example.veltiapi.repository.CategoriaRepository;

@RestController
@RequestMapping("/categorias")// seleciona o metodo a ser executado via get
public class CategoriaResource {
	private CategoriaRepository categoriaRepository;
	
	@GetMapping
	public List<Categoria> listar() {
		return categoriaRepository.findAll();
	}
	
}
